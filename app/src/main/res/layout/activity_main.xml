<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:id="@+id/toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_height="@dimen/material_app_bar_default_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:id="@+id/qr"
            android:background="@drawable/ic_center_focus_weak_black_24dp"
            />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/separatorColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <android.support.v7.widget.CardView
                android:id="@+id/maincard"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                android:layout_marginTop="13dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txt_day_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="@color/material_color_deep_purple_500"
                        android:textSize="@dimen/material_typography_regular_title_text_size"


                        />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_day_name"
                        android:text=""
                        android:textColor="@color/material_color_deep_purple_500"
                        android:textSize="@dimen/material_typography_regular_title_text_size"
                        />

                    <TextView
                        android:id="@+id/txt_original_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:text="Not connected to home"
                        android:textColor="@color/material_color_deep_purple_500"
                        android:textSize="@dimen/material_card_supporting_text_text_size"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_monetization_on_black_24dp"
                            android:id="@+id/payment"
                            />

                        <TextView
                            android:id="@+id/txt_seeds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="350"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/material_color_green_400"
                            android:textSize="50dp"
                            />

                        <TextView
                            android:id="@+id/txt_chance_rain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="seeds"
                            android:textColor="@color/material_color_deep_purple_500"
                            android:textSize="@dimen/material_card_supporting_text_text_size"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_weather"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/seed"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/quotecard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >
                <com.tomer.fadingtextview.FadingTextView
                    android:id="@+id/fadingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/material_color_deep_purple_500"
                    android:textSize="15sp"
                    app:texts="@array/examples"
                    app:timeout="2000" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/homecard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textColor="@color/material_color_deep_purple_400"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="100 seeds"
                            android:textColor="@color/material_color_deep_purple_400"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:id="@+id/user1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user1"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="100"
                            android:textColor="@color/material_color_deep_purple_400"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:id="@+id/user2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user2"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="100"
                            android:textColor="@color/material_color_deep_purple_400"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:id="@+id/user3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user3"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="100"
                            android:textColor="@color/material_color_deep_purple_400"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        >

                        <TextView
                            android:id="@+id/user4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user4"
                            android:textColor="@color/material_color_deep_purple_400"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="100"
                            android:textColor="@color/material_color_deep_purple_400"
                            />

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/transcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        android:textColor="@color/material_color_deep_purple_500"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="No transactions made"
                        android:textColor="@color/material_color_deep_purple_500"/>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_edge_margin"
                android:layout_marginRight="@dimen/material_card_edge_margin"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/material_color_white"
                app:cardCornerRadius="@dimen/material_card_corner_radius"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/material_card_actions_row_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Coupons"
                        android:textColor="@color/material_color_deep_purple_500"
                        android:textStyle="bold"
                        />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="bottom"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="30dp"
                android:paddingEnd="60dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingStart="60dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:alpha="0.98"
        android:background="@drawable/rounded_corners"
        android:elevation="@dimen/material_bottom_sheet_elevation"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="5dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_expand_less_black_24dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/swipe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Explore"
                    android:textColor="@color/material_color_grey_600"
                    android:textSize="12dp"/>


            </RelativeLayout>



            <!-- Sheet-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>