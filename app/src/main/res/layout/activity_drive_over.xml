<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.bottomsheet.Ride_act">

    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:checkView_strokeColor="@color/green"
        app:checkView_strokeWidth="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/check"
        android:layout_marginTop="30dp"
        android:id="@+id/rc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="46dp"
        android:id="@+id/billing"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/rc"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="22dp"
            android:id="@+id/dis_txt"
            android:textColor="@color/cardview_light_background"
            android:text="Distance: 10km"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/dis_txt"
            android:textSize="22dp"
            android:textColor="@color/cardview_light_background"
            android:text="Total time: 1hr"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:textSize="30dp"
            android:text="GOOD DRIVE"
            android:textColor="@color/cardview_light_background"

            android:id="@+id/bill"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/dis_txt" />

    </RelativeLayout>




</RelativeLayout>

