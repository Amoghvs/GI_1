<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.bottomsheet.Carpool_act">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.anuj.carpool_test.MapsActivity" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="4dp">

        <fragment
            android:id="@+id/place_fragment"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/call"
        android:text="Call"
        android:layout_marginStart="31dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/card_view"
        android:layout_alignStart="@+id/card_view" />
    <Button
        android:layout_width="80dp"
        android:layout_height="52dp"
        android:id="@+id/msg"
        android:text="msg"
        android:layout_alignBottom="@+id/call"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/request"
        android:text="req"
        android:layout_alignBaseline="@+id/call"
        android:layout_alignBottom="@+id/call"
        android:layout_alignEnd="@+id/card_view" />



    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/my_loc"
        android:layout_above="@+id/li"
        android:background="@android:drawable/ic_menu_mylocation"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:id="@+id/li"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration"
                    android:textSize="20dp"
                    android:textColor="@color/material_color_white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mins ("
                    android:textSize="20dp"
                    android:textColor="@color/material_color_white"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distance"
                    android:textSize="20dp"
                    android:textColor="@color/material_color_white"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kms)"
                    android:textColor="@color/material_color_white"
                    android:textSize="20dp"
                    android:layout_weight="1.9">
                </TextView>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_nav"
                    android:id="@+id/nav"></Button>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:weightSum="2">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/joinb"
                    android:background="@color/cardview_light_background"
                    android:text="Join"
                    android:layout_margin="2dp"
                    android:textColor="@color/material_color_deep_purple_500"
                    android:elevation="9dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/initiateb"
                    android:layout_margin="2dp"
                    android:textColor="@color/material_color_deep_purple_500"
                    android:background="@color/cardview_light_background"
                    android:text="Initiate"
                    android:elevation="9dp"

                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>